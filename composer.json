{
    "name": "lepre/cr",
    "description": "The Content Repository (CR) is the persistence layer of a CMS",
    "keywords": [
        "cr",
        "content repository",
        "cms",
        "content management system",
        "phpcr"
    ],
    "homepage": "https://github.com/leprephp/cr",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniele De Nobili",
            "email": "danieledenobili@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/leprephp/cr",
        "issues": "https://github.com/leprephp/cr/issues"
    },
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Lepre\\Cr\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lepre\\Cr\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    }
}
