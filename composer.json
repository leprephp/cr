{
    "name": "lepre/cr",
    "description": "The Content Repository (CR) is the persistence layer of a CMS",
    "homepage": "https://github.com/leprephp/cr",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniele De Nobili",
            "email": "danieledenobili@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-pdo": "*",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Lepre\\Cr\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lepre\\Cr\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    }
}
